@model CategoryListViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Admin Categories</h1>
        <hr>
        <div class="text-right">
            <a href="/admin/categories/create" class="btn btn-success btn-sm text-right">Add Category</a>
        </div>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td>Name</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories.Count > 0)
                {
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td class="text-center">

                                <a href="/admin/categories/@item.Id" class="btn btn-success btn-sm mr-2">Edit</a>

                                <form action="/admin/deletecategory" method="POST" style="display: inline;">
                                    <input type="hidden" name="categoryId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm text-light">Delete</button>
                                </form>
                                
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        <h3>No Categories</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>    