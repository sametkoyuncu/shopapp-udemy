@model ProductListViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Admin Products</h1>
        <hr>
        <div class="text-right">
            <a href="/admin/products/create" class="btn btn-success btn-sm text-right">Add Product</a>
        </div>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Image</td>
                    <td>Name</td>
                    <td style="width: 60px;">Price</td>
                    <td style="width: 20px;">Anasayfa</td>
                    <td style="width: 20px;">OnaylÄ±</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Count > 0)
                {
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><img src="~/img/@item.ImageUrl" width="80px"></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td class="text-center">
                                @if(item.IsHome)
                                {
                                    <i class="fas fa-check-circle text-success"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle text-danger"></i>
                                }
                            </td>
                            <td class="text-center">
                                @if(item.IsApproved)
                                {
                                    <i class="fas fa-check-circle text-success"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle text-danger"></i>
                                }
                            </td>
                            <td class="text-center">

                                <a href="/admin/products/@item.Id" class="btn btn-success btn-sm mr-2">Edit</a>

                                <form action="/admin/deleteproduct" method="POST" style="display: inline;">
                                    <input type="hidden" name="productId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm text-light">Delete</button>
                                </form>
                                
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        <h3>No Products</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>    